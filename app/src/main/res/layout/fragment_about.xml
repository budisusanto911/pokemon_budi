<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:paddingBottom="16dp"
    android:layout_marginBottom="16dp"
    android:background="@drawable/rounded_bottom"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include layout="@layout/item_status"/>
        <TextView
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:text="@string/weakness"
            android:textColor="@color/lightBlue"
            android:textSize="18sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            app:spanCount="3"
            android:id="@+id/rvWeakness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <include layout="@layout/item_abiliti"/>
        <include layout="@layout/item_breeding"/>
        <include layout="@layout/item_capture"/>
        <include layout="@layout/spirit"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>